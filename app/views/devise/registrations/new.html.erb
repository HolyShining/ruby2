<div class="s12 m4 l8 center">
<h2>Реєстрація:</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render 'shared/devisemes' %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
  </div>

    <div class="field">
    <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Ім'я" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "off", placeholder: "Пароль" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Підтвердіть пароль" %>
  </div>

  <div class="field">
    <%= f.select :role, [["Водій", "driver"], ["Оператор", "operator"], ["Бухгалтер", "accounter"]], prompt: "Оберіть роль користувача" %>

  </div>

  <div class="actions">
    <%= f.submit "Зареєструвати", class: "waves-effect waves-light btn blue lighten-2" do %>
    <% end %>
  </div>
<% end %>
</div>