<h2 class="center">Вхід</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "off", placeholder: "Пароль" %>
  </div>

  <!--<% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>-->
  <br>

  <div class="actions center">
    <%= f.submit "Ввійти!", class: "waves-effect waves-light btn blue lighten-2" do %>
    <% end %>
    <%= link_to "Забули пароль?", new_password_path(resource_name), class: "waves-effect waves-light btn blue lighten-2" %>
  </div>
<% end %>

  
