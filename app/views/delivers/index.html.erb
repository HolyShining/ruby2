<p id="notice"><%= notice %></p>

<h1>Delivers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Driver</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @delivers.each do |deliver| %>
      <tr class="<%= deliver.is_deliverd ? 'teal lighten-2' : '' %>">
        <td><%= deliver.name %></td>
        <td><%= deliver.address %></td>
        <td><%= User.find_by_id(deliver.driver.to_i).name %></td>
        <!--<td><%= button_to 'Show details', deliver %></td>-->
        <td><%= link_to 'Edit', edit_deliver_path(deliver),class: "waves-effect waves-light btn blue lighten-2" %></td>
        <td><%= button_to 'Delete', deliver, method: :delete, data: { confirm: 'Are you sure?' },class: "waves-effect waves-light btn blue lighten-2" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

